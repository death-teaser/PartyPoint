<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rescuisien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.root.partypoint.restaurant_deatils">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:srcCompat="@mipmap/ic_launcher"/>


        <TextView
        android:id="@+id/res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_2"
        android:layout_alignStart="@+id/img_2"
        android:layout_below="@+id/res_name"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Address:" />

    <TextView
        android:id="@+id/res_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView37"
        android:layout_toRightOf="@+id/textView37"
        android:textSize="16dp"
        android:textStyle="italic"
        android:text="TextView" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView37"
            android:layout_alignLeft="@+id/textView37"
            android:layout_alignRight="@+id/textView37"
            android:layout_alignStart="@+id/textView37"
            android:layout_below="@+id/textView37"
            android:text="Cost: "
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/res_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/res_add"
            android:layout_alignRight="@+id/res_add"
            android:layout_alignTop="@+id/textView39"
            android:layout_below="@+id/textView39"
            android:text="TextView"
            android:textSize="16dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView37"
            android:layout_alignRight="@+id/textView37"
            android:layout_below="@+id/textView39"
            android:layout_marginTop="13dp"
            android:text="Cuisien"
            android:layout_alignLeft="@+id/textView39"
            android:layout_alignStart="@+id/textView39"
            android:textSize="16dp"
            android:layout_margin="2dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/res_cui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/res_cost"
            android:layout_alignRight="@+id/res_cost"
            android:layout_alignTop="@+id/textView42"
            android:text="TextView"
            android:textSize="16dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView42"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:text="Visit Website" />


    </RelativeLayout>
</ScrollView>
